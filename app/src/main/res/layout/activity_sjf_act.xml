<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sjf_act"
    android:background="@drawable/bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/wel_sjf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/White"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="66dp"
        android:layout_marginRight="5dp"
        android:textSize="18sp"
        android:text="Welcome  To  SJF(Non-preemptive)" />

    <LinearLayout
        android:id="@+id/sjf_txt_lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp"
        >

        <EditText
            android:id="@+id/p_id_sjf"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Process_id  (P0, P1)"
            android:textColor="@color/White"
            android:textColorHint="@color/White"
            android:imeOptions="actionDone"
            android:inputType="text" />
        <EditText
            android:id="@+id/sjf_at"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textColor="@color/White"
            android:textColorHint="@color/White"
            android:imeOptions="actionDone"
            android:hint="Arrival Time"
            android:inputType="numberDecimal" />
        <EditText
            android:id="@+id/sjf_bt"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Brust Time"
            android:imeOptions="actionDone"
            android:textColor="@color/White"
            android:textColorHint="@color/White"
            android:inputType="numberDecimal" />

        <LinearLayout
            android:id="@+id/sjf_but"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/sjf_insert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Insert"
                android:layout_marginTop="10dp"
                android:textSize="22dp"
                style="@android:style/Widget.Material.Light.Button.Borderless.Colored"
                android:textColor="@color/White"
                android:textAllCaps="false"
                tools:targetApi="lollipop" />

            <Button
                android:id="@+id/sjf_calculate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calculate"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="50dp"
                android:textSize="22dp"
                style="@android:style/Widget.Material.Light.Button.Borderless.Colored"
                android:textColor="@color/White"
                android:textAllCaps="false"
                tools:targetApi="lollipop" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>