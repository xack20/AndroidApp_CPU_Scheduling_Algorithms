<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical">

    <TextView
        android:layout_marginTop="50dp"
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome_to_operating_system_cpu_scheduling_algorithms"
        android:textAlignment="center"
        android:layout_marginBottom="30dp"
        android:textColor="@android:color/white"
        android:textColorLink="@android:color/white"
        android:textSize="30sp" />

    <LinearLayout
        android:id="@+id/butt_lay"
        android:layout_width="match_parent"
        android:layout_height="408dp"
        android:layout_margin="30dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/FCFS"
            style="@android:style/Widget.Material.Light.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:text="@string/fcfs"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/sjf"
            style="@android:style/Widget.Material.Light.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:text="@string/sjf_non_preemptive"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/sjf2"
            style="@android:style/Widget.Material.Light.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:text="@string/sjf_preemptive"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/rr"
            style="@android:style/Widget.Material.Light.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:text="@string/round_robin"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/prio"
            style="@android:style/Widget.Material.Light.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:text="@string/priority_non_preemptive"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/prio2"
            style="@android:style/Widget.Material.Light.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:text="@string/priority_preemptive"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

    </LinearLayout>

</LinearLayout>